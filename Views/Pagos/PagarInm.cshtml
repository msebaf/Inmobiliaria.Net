@model Inmobiliaria.Net.Models.Pago

@{
    double mMensual= ViewBag.mMensual;
    int cId = ViewBag.cId;
}

<h1>Alta Pago</h1>

<h4>Pagar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           

            <div class="form-group">
        
                <input asp-for="ContratoId"  value="@cId" class="form-control" hidden/>
                <span asp-validation-for="ContratoId" class="text-danger"></span>
            </div>
            
 <div class="form-group">
                <label asp-for="Periodo" class="control-label"></label>
                <input asp-for="Periodo" type="Month" value="@DateTime.Now.ToString("yyyy-MM")" class="form-control" required/>
                <span asp-validation-for="Periodo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaPago" class="control-label"></label>
                <input asp-for="FechaPago" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")"   class="form-control" required/>
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" value= "@mMensual" class="form-control" required/>
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
           
         

       
            <div class="form-group">
                <input type="submit" value="GUARDAR" class="btn btn-primary" />
            </div>
       
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">VOLVER</a>
</div>

