@model Inmobiliaria.Net.Models.Pago

@{
    ViewData["Title"] = "Create";
    var conts = (IList<Contrato>) ViewBag.contratos;
    
}
<h1>Nuevo Pago</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           

            <div class="form-group">
                <label class="control-label">Contrato</label>
                
                <select class="form-control" name="ContratoId">
                 @foreach (var item in conts)
                {
                    @:<option value="@item.Id">@item.ToString()</option>
                }
                </select>
                <span asp-validation-for="ContratoId" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <label asp-for="Periodo" class="control-label"></label>
                <input asp-for="Periodo" type="Month" value="@DateTime.Now.ToString("yyyy-MM")" class="form-control" required/>
                <span asp-validation-for="Periodo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaPago" class="control-label"></label>
                <input asp-for="FechaPago" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" required/>
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" required/>
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
           
         

       
            <div class="form-group">
                <input type="submit" value="GUARDAR" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">VOLVER</a>
</div>

