@model Inmobiliaria.Net.Models.Pago

@{
    ViewData["Title"] = "Edit";
    var conts = (IList<Contrato>) ViewBag.contratos;
}
<h1>EDICION</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Pago</label>
                <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
                <select class="form-control" name="ContratoId">
                 @foreach (var item in conts)
                {
                    @:<option value="@item.Id" @(item.Id==Model.ContratoId?"selected" :"")>@item.ToString()</option>
                }
                </select>
                <span asp-validation-for="ContratoId" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <label asp-for="Periodo" class="control-label"></label>
                <input asp-for="Periodo" class="form-control" required/>
                <span asp-validation-for="Periodo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaPago" class="control-label"></label>
                <input asp-for="FechaPago"  class="form-control" required/>
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" required/>
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
           
         

       
            <div class="form-group">
                <input type="submit" value="GUARDAR" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">VOLVER</a>
</div>

