@model Inmobiliaria.Net.Models.Contrato
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

@{
    ViewData["Title"] = "Edit";
    var Inms = (IList<Inmueble>) ViewBag.inmuebles;
    var inqs = (IList<Inquilino>) ViewBag.inquilinos;
    
}
<h1>Alta Contrato</h1>

<h4>Contrato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           

            <div class="form-group">
                <label class="control-label">Inmueble</label>
                
                <select class="form-control" name="InmuebleId">
                 @foreach (var item in Inms)
                {
                    @:<option value="@item.Id">@item.ToString()</option>
                }
                </select>
                <span asp-validation-for="InmuebleId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label class="control-label">Inquilino</label>
                
                <select class="form-control" name="InquilinoId">
                 @foreach (var item in inqs)
                {
                    @:<option value="@item.Id" >@item.ToString()</option>
                }
                </select>
                <span asp-validation-for="InquilinoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" required/>
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaFinal" class="control-label"></label>
                <input asp-for="FechaFinal" class="form-control" required/>
                <span asp-validation-for="FechaFinal" class="text-danger"></span>
                
            </div>


            <div class="form-group">
                <label asp-for="MontoMensual" class="control-label"></label>
                <input asp-for="MontoMensual" class="form-control" required/>
                <span asp-validation-for="MontoMensual" class="text-danger"></span>
            </div>
            
           
         

       
            <div class="form-group">
                <input type="submit" value="GUARDAR" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">VOLVER</a>
</div>

