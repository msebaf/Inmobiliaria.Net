@model IEnumerable<Inmobiliaria.Net.Models.Contrato>



<h1>Contratos</h1>


<table class="table">
    <thead>
        <tr>
        
          
           <th>
                <b>Inmueble</b> 
            </th>
            <th>
                <b>Inquilino</b> 
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.FechaFinal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MontoMensual)
            </th>
             
              <th>
                <b>Pagos</b>

            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
         
           <td>
                @item.inmueble.ToString()
            </td>
            <td>
                @item.inquilino.ToString()
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.FechaFinal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontoMensual)
            </td>
           
              <td>
            
             @Html.ActionLink("Pagos",  "Index", "Pagos",new { id = item.Id }, null) 
           
           </td>
            
           
            <td>
                 @Html.ActionLink("Renovar", "Renovar", new {  id = item.Id }) |
                @Html.ActionLink("Editar", "Edit", new {  id=item.Id }) |
                @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
                @Html.ActionLink("Borrar", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
